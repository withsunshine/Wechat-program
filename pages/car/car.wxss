/* pages/car/car.wxss */
.goodslist{
    display: flex;
    padding:20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}
.goodslist .left{
    width: 240rpx;
    text-align: center;
}
.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right{
    flex:1;
    position: relative;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}

.goodslist .right .goods_name{
    font-size: 36rpx;
    color:#808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    margin-bottom: 20px;
}
.goodslist .right .goods_address{
    font-size: 24rpx;
    color:#929292;
}
.goodslist .right .goods_price{
    font-size: 30rpx;
    color:#ff1493;
}

.goodslist .right .car{
    position: absolute;
    right:20rpx;
    bottom: 0px;
}

.goodslist .buttons{
    width: 200rpx;
    position: absolute;
    right: 100rpx;
    bottom:10rpx;
    color:#b2b2b2;
}
.goodslist .buttons .btn{
    width: 52rpx;
    height: 52rpx;
    text-align: center;
    float: left;
    border:1px solid #b2b2b2;
}
.goodslist .buttons .num{
    float: left;
    border-top:1px solid #b2b2b2;
    border-bottom:1px solid #b2b2b2;
    height: 52rpx;
    line-height: 52rpx;
    width: 80rpx;
    text-align: center;
    font-size: 28rpx;
}

.bottomNav{
    position: fixed;
    left:0px;
    bottom:0px;
    background-color: #fff;
    width: 100%;
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.bottomNav .warp{
    padding: 0px 20px;
}
.bottomNav .warp text{
    color:#ff0000;
}
.bottomNav .warp .order{
    float: right;
    height: 60rpx;
    line-height: 60rpx;
    width: 160rpx;
    text-align: center;
    margin-top: 20rpx;
    background-color: #FF7E3D;
    color: #fff;
    border-radius: 2px;
}